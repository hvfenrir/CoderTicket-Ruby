<!DOCTYPE html>
<html>
  <head>
    <title>CsTemplate</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-inverse">
      <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
      <ul class="nav navbar-nav">
        <% if current_user %>
        
        <li class="nav-item">
          <span class="nav-link"> Welcome <%= current_user.email %> </span>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Out", destroy_user_session_path(current_user), method: :delete ,class: 'nav-link'  %>
        </li>
        <li class="nav-item">
          <%= link_to "Create Event", new_event_path, class: 'nav-link'  %>
        </li>
        <li class="nav-item">
          <%= link_to "List Event Created", user_events_path(current_user), class: 'nav-link'   %>
        </li>
        <% else %>
        <li class="nav-item">
          <!-- <a class="nav-link" href="#">Log In</a> -->
          <%= link_to "Log In", new_user_session_path, class: 'nav-link'  %>
        </li>
        <li class="nav-item">
          <!-- <a class="nav-link" href="#">Sign Up</a> -->
          <%= link_to "Sign Up",new_user_registration_path, class: 'nav-link'  %>
        </li>
        <% end %>
        <li class="nav-item">
          <%= link_to "Upcoming Events", events_path(upcoming: 'upcoming') , class: 'nav-link' %>
        </li>
      </ul>
    </nav>
    <% if notice %>
    <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
